
@if (_npc != null)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel">NPC Quick View</h5>
                    <button type="button" class="close btn btn-lg" @onclick="Close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col row">
                        <div class="col-12 col-sm-8">

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Name</label>
                                <div class="col-sm-7">
                                    <label type="text" readonly class="form-control-plaintext">@_npc.Name</label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Level</label>
                                <div class="col-sm-7">
                                    <label type="text" readonly class="form-control-plaintext">@_npc.Level</label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Gender</label>
                                <div class="col-sm-7">
                                    <label type="text" readonly class="form-control-plaintext">@_npc.Gender</label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Race</label>
                                <div class="col-sm-7">
                                    <label type="text" readonly class="form-control-plaintext">@_npc.Race</label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Role</label>
                                <div class="col-sm-7">
                                    <label type="text" readonly class="form-control-plaintext">@_npc.Role</label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Appearance</label>
                                <div class="col-sm-7">
                                    <label type="text" readonly class="form-control-plaintext">@_npc.Appearance</label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Health</label>
                                <div class="col-sm-7">
                                    <label type="text" readonly class="form-control-plaintext">@_npc.Health</label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Max Health</label>
                                <div class="col-sm-7">
                                    <label type="text" readonly class="form-control-plaintext">@_npc.MaxHealth</label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Temp Health</label>
                                <div class="col-sm-7">
                                    <label type="text" readonly class="form-control-plaintext">@_npc.TempHealth</label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Armour Class</label>
                                <div class="col-sm-7">
                                    <label type="text" readonly class="form-control-plaintext">@_npc.ArmourClass</label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Passive Perception</label>
                                <div class="col-sm-7">
                                    <label type="text" readonly class="form-control-plaintext">@_npc.PassivePerception</label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Attacks</label>
                                <div class="col-sm-7">
                                    <label type="text" readonly class="form-control-plaintext">@_npc.Attacks</label>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label">Notes</label>
                                <div class="col-sm-7">
                                    <label type="text" readonly class="form-control-plaintext">@_npc.Notes</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="button" class="btn btn-outline-primary" @onclick="Close">Close</button>
                </div>
            </div>
        </div>
    </div>
}