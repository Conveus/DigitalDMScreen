<div class="col">
    <div class="card rounded-3">
        <div class="card-header py-3">
            <h4>@PC.Name</h4>
        </div>
        <div class="card-body text-center">
            
            <div class="form-group row">
                <label class="col-sm-5 col-form-label">Level</label>
                <div class="col-sm-7">
                    <label type="text" readonly class="form-control-plaintext">@PC.Level</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-5 col-form-label">Gender</label>
                <div class="col-sm-7">
                    <label type="text" readonly class="form-control-plaintext">@PC.Gender</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-5 col-form-label">Race</label>
                <div class="col-sm-7">
                    <label type="text" readonly class="form-control-plaintext">@PC.Race</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-5 col-form-label">Class</label>
                <div class="col-sm-7">
                    <label type="text" readonly class="form-control-plaintext">@PC.Class</label>
                </div>
            </div>
            
        </div>
        <div class="card-footer">
            <button class="btn btn-primary btn-sm mb-1" @onclick="@(async () => await PCQuickViewClicked.InvokeAsync(PC))"> Quick view</button>

            @*<button class="btn btn-outline-primary btn-sm mb-1" @onclick="(() => NavigateToDetails(PC))">
            Full details
            </button>*@

            @*<a href="@($"pcedit/{PC.Id}")" class="btn btn-outline-primary btn-sm mb-1">
            Edit PC
            </a>*@
        </div>
    </div>
</div>