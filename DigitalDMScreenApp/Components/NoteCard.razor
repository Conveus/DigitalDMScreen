<div class="col">
    <div class="card rounded-3">
        <div class="card-header py-3">
            <h4>@Note.Name</h4>
        </div>
        <div class="card-body text-center">
            <button class="btn btn-primary btn-sm mb-1" @onclick="@(async () => await NoteQuickViewClicked.InvokeAsync(Note))"> Quick view</button>
            
            <button class="btn btn-outline-primary btn-sm mb-1" @onclick="(() => NavigateToDetails(Note))">
                Full details
            </button>

            <a href="@($"noteedit/{Note.Id}")" class="btn btn-outline-primary btn-sm mb-1">
                Edit Note
            </a>
        </div>
    </div>
</div>