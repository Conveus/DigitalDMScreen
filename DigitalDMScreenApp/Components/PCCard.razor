<div class="col">
    <div class="card rounded-3">
        <div class="card-header py-3">
            <h4>@PC.Name</h4>
        </div>
        <div class="card-body text-center">
            <button class="btn btn-primary btn-sm mb-1" @onclick="@(async () => await PCQuickViewClicked.InvokeAsync(PC))"> Quick view</button>
            
            <button class="btn btn-outline-primary btn-sm mb-1" @onclick="(() => NavigateToDetails(PC))">
                Full details
            </button>
        </div>
    </div>
</div>