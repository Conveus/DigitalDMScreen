
<!-- Increases or decreases active panel number to switch panels -->
<div class="panel-nav row">
    <!-- Only diplays buttons if not at edge of range -->
    @if (ActivePanel != 1)
    {
        <button class="btn btn-primary col" @onclick="() => Decrement()">Left</button>
    }
    <div class="panel-num col">Panel @ActivePanel</div>
    @if (ActivePanel != 3)
    {
        <button class="btn btn-primary col" @onclick="() => Increment()">Right</button>
    }
</div>
<div>
    <NoteQuickView Note="_selectedNote"></NoteQuickView>
    <LocationQuickView Location="_selectedLocation"></LocationQuickView>
    <MonsterQuickView Monster="_selectedMonster"></MonsterQuickView>
    <PCQuickView PC="_selectedPC"></PCQuickView>
    <NPCQuickView NPC="_selectedNPC"></NPCQuickView>
    <!-- Display panel content based on active panel number -->
    <div>
        @if (ActivePanel == 1)
        {
            <div>
                <div class="row">
                    @foreach (var pc in ScreenNotes.P1UsedPCs)
                    {
                        <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-3">
                            <PCScreenCard PC="pc" PCQuickViewClicked="ShowPCQuickView"></PCScreenCard>
                        </div>

                    }
                </div>
            </div>
