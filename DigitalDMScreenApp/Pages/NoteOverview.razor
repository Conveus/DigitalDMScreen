@page "/noteoverview"

<h2>Note Overview</h2>

@if (Notes == null)
{
    <p><em>Loading... </em></p>
}
else
{
    <NoteQuickView Note="_selectedNote"></NoteQuickView>
    <a href="@($"noteedit")" class="btn btn-primary btn-sm mb-1">
        Create Note
    </a>
    <div class="row">
        @foreach (var note in Notes)
        {
            <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-3">
                <NoteCard Note="note" NoteQuickViewClicked="ShowNoteQuickView"></NoteCard>
            </div>

        }
    </div>
}