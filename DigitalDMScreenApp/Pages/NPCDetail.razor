@page "/npcdetail/{Id}"

<section class="employee-detail">
    <h1 class="page-title">@NPC.Name</h1>
    <br />
    <div class="col-12 row">
        <div class="col-10 row">
            <div class="col-12 col-xxl-8">
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Level</label>
                    <div class="col-sm-8">
                        <label type="text" class="form-control-plaintext">@NPC.Level</label>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Gender</label>
                    <div class="col-sm-8">
                        <label type="text" class="form-control-plaintext">@NPC.Gender</label>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Race</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@NPC.Race</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Role</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@NPC.Role</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Appearance</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@NPC.Appearance</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Health</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@NPC.Health</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Max Health</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@NPC.MaxHealth</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Temp Health</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@NPC.TempHealth</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Armour Class</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@NPC.ArmourClass</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Passive Perception</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@NPC.PassivePerception</label>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-4 col-form-label">Notes</label>
                    <div class="col-sm-8">
                        <label type="text" readonly class="form-control-plaintext">@NPC.Notes</label>
                    </div>
                </div>
            </div>
            <div class="col-12 col-xxl-4">
            </div>
        </div>
    </div>
</section>
